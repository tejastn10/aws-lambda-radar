{
	"name": "aws-lambda-radar",
	"version": "1.0.4",
	"description": "Modern utility functions for AWS Lambda in Node.js",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/tejastn10/aws-lambda-radar.git"
	},
	"scripts": {
		"build": "tsc",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage --collectCoverageFrom='src/**/*.{ts,tsx}'",
		"prepublishOnly": "npm run build",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,json}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "npm@11.8.0",
	"dependencies": {
		"@aws-sdk/client-lambda": "^3.975.0",
		"reflect-metadata": "^0.2.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.12",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@types/aws-lambda": "^8.10.160",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.0.10",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"ts-jest": "^29.4.6",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"@types/aws-lambda": "^8.10.126"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"keywords": [
		"aws",
		"lambda",
		"nodejs",
		"typescript",
		"utilities",
		"monitoring",
		"serverless"
	],
	"files": [
		"dist",
		"logo.svg",
		"README.md",
		"LICENSE.md"
	],
	"license": "MIT"
}
